{
  "productName": "LLaMA Chat",
  "version": "0.1.0",
  "identifier": "com.llamachat.app",
  "build": {
    "beforeDevCommand": "vite --host --port 4000",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:4000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LLaMA Chat - AI Assistant with Command Execution",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  }
}