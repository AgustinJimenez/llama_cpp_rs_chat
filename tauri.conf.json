{
  "productName": "LLaMA Chat",
  "version": "0.1.0",
  "identifier": "com.llamachat.desktop",
  "build": {
    "beforeDevCommand": "vite --host --port 4000",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:4000",
    "frontendDist": "./dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "LLaMA Chat - AI Assistant with Command Execution",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "both"
      }
    }
  }
}
