{
  "api_name": "BookStore API",
  "version": "2.1",
  "base_url": "https://api.bookstore.example.com/v2",
  "endpoints": [
    {
      "path": "/books",
      "method": "GET",
      "description": "Retrieve a list of books with optional filtering",
      "parameters": [
        { "name": "genre", "type": "string", "required": false, "description": "Filter by genre (e.g., fiction, science, history)" },
        { "name": "author", "type": "string", "required": false, "description": "Filter by author name (partial match)" },
        { "name": "page", "type": "integer", "required": false, "default": 1, "description": "Page number for pagination" },
        { "name": "limit", "type": "integer", "required": false, "default": 20, "description": "Number of results per page (max 100)" }
      ],
      "example_response": {
        "total": 342,
        "page": 1,
        "books": [
          { "id": "b001", "title": "The Great Algorithm", "author": "Jane Smith", "genre": "science", "price": 24.99 }
        ]
      }
    },
    {
      "path": "/books/{id}",
      "method": "GET",
      "description": "Retrieve detailed information about a specific book",
      "parameters": [
        { "name": "id", "type": "string", "required": true, "description": "The unique book identifier" }
      ],
      "example_response": {
        "id": "b001",
        "title": "The Great Algorithm",
        "author": "Jane Smith",
        "genre": "science",
        "price": 24.99,
        "isbn": "978-3-16-148410-0",
        "published": "2023-06-15",
        "pages": 384,
        "description": "An exploration of how algorithms shape modern society."
      }
    },
    {
      "path": "/orders",
      "method": "POST",
      "description": "Place a new book order",
      "parameters": [
        { "name": "customer_id", "type": "string", "required": true, "description": "The customer's unique identifier" },
        { "name": "items", "type": "array", "required": true, "description": "Array of objects with book_id (string) and quantity (integer)" },
        { "name": "shipping_address", "type": "object", "required": true, "description": "Object with street, city, state, zip fields" },
        { "name": "payment_method", "type": "string", "required": true, "description": "Payment method ID from customer's saved methods" }
      ],
      "example_request": {
        "customer_id": "cust_123",
        "items": [
          { "book_id": "b001", "quantity": 2 },
          { "book_id": "b047", "quantity": 1 }
        ],
        "shipping_address": {
          "street": "123 Main St",
          "city": "Portland",
          "state": "OR",
          "zip": "97201"
        },
        "payment_method": "pm_visa_4242"
      },
      "example_response": {
        "order_id": "ord_789",
        "status": "confirmed",
        "total": 74.97,
        "estimated_delivery": "2024-03-22"
      }
    }
  ]
}
